#!/usr/bin/with-contenv bash

PUID=${PUID:-911}
PGID=${PGID:-911}

groupmod -o -g "$PGID" gamestream
usermod -o -u "$PUID" gamestream

echo '
----------------------------------------------------------------------------
  _____          __  __ ______  _____ _______ _____  ______          __  __
 / ____|   /\   |  \/  |  ____|/ ____|__   __|  __ \|  ____|   /\   |  \/  |
| |  __   /  \  | \  / | |__  | (___    | |  | |__) | |__     /  \  | \  / |
| | |_ | / /\ \ | |\/| |  __|  \___ \   | |  |  _  /|  __|   / /\ \ | |\/| |
| |__| |/ ____ \| |  | | |____ ____) |  | |  | | \ \| |____ / ____ \| |  | |
 \_____/_/    \_\_|  |_|______|_____/   |_|  |_|  \_\______/_/    \_\_|  |_|



Brought to you by gamestream.biz
----------------------------------------------------------------------------
GID/UID
----------------------------------------------------------------------------'
echo "
User uid:    $(id -u gamestream)
User gid:    $(id -g gamestream)
----------------------------------------------------------------------------
"
chown gamestream:gamestream /app
chown gamestream:gamestream /config
chown gamestream:gamestream /defaults
